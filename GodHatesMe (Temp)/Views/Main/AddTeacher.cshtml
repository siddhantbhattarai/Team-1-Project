@model GodHatesMe.Models.TeacherViewModel

@{
    ViewData["Title"] = "AddTeacher";
}

<h1>AddTeacher</h1>

<h4>TeacherViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTeacher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label"></label>
                <select asp-for="ModuleId" class="form-control input">
                    <option value="0">--SELECT--</option>
                    @foreach (var item in ViewBag.Modules)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="ModuleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageScore" class="control-label"></label>
                <input asp-for="AverageScore" class="form-control" />
                <span asp-validation-for="AverageScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
