@model List<GHM.Models.FeedbackQuestionViewModel>

@{
    ViewData["Title"] = "Feedback Form for Teacher Evaluation by Students";
}

<h1>Feedback Form for Teacher Evaluation by Students</h1>

<form asp-action="FeedbackForm" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Questions</th>
                @foreach (var module in Model.First().Modules)
                {
                    <th>@module.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.Qn</td>
                    @foreach (var teacher in feedback.Teachers)
                    {
                        <td>
                            <input type="hidden" name="[@feedback.Id].Teachers[@teacher.Id].TeacherId" value="@teacher.Id" />
                            <input type="hidden" name="[@feedback.Id].Teachers[@teacher.Id].ModuleId" value="@teacher.ModuleId" />
                            <input type="text" name="[@feedback.Id].Teachers[@teacher.Id].Rating" value="" class="form-control" />
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
