@model GHM.Models.IssueViewModel

@{
    ViewData["Title"] = "CreateIssue";
}

<h1>CreateIssue</h1>

<h4>IssueViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateIssue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="Operational">Operational</option>
                    <option value="Exam & Assignment">Exam & Assignment</option>
                    <option value="Academic">Academic</option>
                    <option value="ECA">ECA</option>
                    <option value="MentalHealth">MentalHealth</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecommendedSolution" class="control-label"></label>
                <input asp-for="RecommendedSolution" class="form-control" />
                <span asp-validation-for="RecommendedSolution" class="text-danger"></span>
            </div>
            <!-- Send Anonmyous User Id -->
            <div class="form-group">
                <!-- CheckBox for Anonmyous option -->
                <label class="control-label"></label>
                <input type="checkbox" /> Send As Anonmyous?
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Issuelist">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    h1, .control-label {
        color: white;
    }
    /* Button Styles */
    .btn-custom {
        color: #1C5792;
        margin: 10px 0px;
        text-decoration: none;
        /* Removes underline */
        background-color: white;
        /* Blue background */
        border: 1px solid #1C5792;
        /* Blue border */
        padding: 10px 20px;
        /* Padding */
        border-radius: 5px;
        /* Rounded corners */
        display: inline-block;
        /* Align properly */
        transition: background-color 0.3s, color 0.3s;
        /* Smooth transition */
    }

        .btn-custom:hover {
            background-color: #1C5792;
            ;
            /* Orange background on hover */
            color: white;
            /* White text on hover */
            border: 1px solid #F1802B;
            /* Orange border on hover */
        }
</style>